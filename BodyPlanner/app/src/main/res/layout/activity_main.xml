<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:layout_margin="10dp"
    android:padding="20dp"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".Page1">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center"
        android:text="Welcome  Body Planner!"
        android:textColor="#2196F3"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.057"
        android:fontFamily="@font/wemakeprice"/>
    <Space
        android:layout_width="match_parent"
        android:layout_height="25dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="식단 및 소모 Kcal 계산을 위해"
        android:textColor="#3FBFCF"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.057"
        android:fontFamily="@font/healthset"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="5dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="개인정보를 입력해주세요."
        android:textColor="#3FBFCF"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.057"
        android:fontFamily="@font/healthset"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="15dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="center">

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="이름  : "
            android:textSize="25sp"
            android:fontFamily="@font/healthset"/>

        <EditText
            android:id="@+id/et_name"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:hint="이름을 입력해주세요"
            android:gravity="center"
            android:imeOptions="actionNext"
            android:singleLine="true"
            android:fontFamily="@font/healthset"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="center">

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="나이  : "
            android:textSize="25sp"
            android:fontFamily="@font/healthset"/>

        <EditText
            android:id="@+id/et_age"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:hint="나이를 입력해주세요"
            android:textSize="17sp"
            android:inputType="number"
            android:imeOptions="actionNext"
            android:gravity="center"
            android:fontFamily="@font/healthset"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="center">

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="신장  : "
            android:textSize="25sp"
            android:fontFamily="@font/healthset"/>

        <EditText
            android:id="@+id/et_height"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:hint="키(cm)를 입력해주세요"
            android:inputType="numberDecimal"
            android:imeOptions="actionNext"
            android:textSize="16sp"
            android:fontFamily="@font/healthset"
            android:gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="center">

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="체중  : "
            android:textSize="25sp"
            android:fontFamily="@font/healthset"/>

        <EditText
            android:id="@+id/et_weight"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:hint="체중(kg)를 입력해주세요"
            android:inputType="numberDecimal"
            android:imeOptions="actionDone"
            android:textSize="16sp"
            android:gravity="center"
            android:fontFamily="@font/healthset"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="성별  : "
            android:textSize="25sp"
            android:fontFamily="@font/healthset"/>
        <Space
            android:layout_width="10dp"
            android:layout_height="wrap_content"/>


        <RadioGroup
            android:id="@+id/choose_gender"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/male"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="남자"
                android:fontFamily="@font/healthset"/>
            <Space
                android:layout_width="30dp"
                android:layout_height="10dp"/>
            <RadioButton
                android:id="@+id/female"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="여자"
                android:fontFamily="@font/healthset"/>
        </RadioGroup>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">


        <Button
            android:id="@+id/btn_move"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="NEXT"
            app:backgroundTint="#3FBFCF"
            android:fontFamily="@font/wemakeprice"/>
    </LinearLayout>


</LinearLayout>